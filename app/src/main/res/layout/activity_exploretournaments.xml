<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreActivity">

    <TextView
        android:id="@+id/exploreTourneyTitlePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textColor="#5299F1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <ScrollView
        android:id="@+id/scrollViewTournaments"
        android:layout_width="398dp"
        android:layout_height="420dp"
        android:background="@color/default_color"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/backHomeFromExploreButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exploreTourneyTitlePage"
        app:layout_constraintVertical_bias="0.786">

        <LinearLayout
            android:id="@+id/tournamentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/backHomeFromExploreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/colorPrimary"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchCS2"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:text="CS2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exploreTourneyTitlePage" />

    <Switch
        android:id="@+id/switchR6"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:checked="true"
        android:text="Rainbow Six"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreTourneyTitlePage" />

    <Switch
        android:id="@+id/switchRL"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:text="Rocket League"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/switchCS2"
        app:layout_constraintTop_toBottomOf="@+id/exploreTourneyTitlePage" />

    <Switch
        android:id="@+id/switchFortnite"
        android:layout_width="153dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:checked="true"
        android:text="Fortnite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@id/switchR6"
        app:layout_constraintTop_toBottomOf="@+id/exploreTourneyTitlePage" />

    <CheckBox
        android:id="@+id/showFullCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Mostrar torneos llenos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreTourneyTitlePage" />

</androidx.constraintlayout.widget.ConstraintLayout>
